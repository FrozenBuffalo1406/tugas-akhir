<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Dasar (Night) -->
    <style name="Theme.ECGApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary: Sage Muda (Biar kontras di gelap) -->
        <item name="colorPrimary">@color/sage_200</item>
        <item name="colorPrimaryVariant">@color/sage_700</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Teks di atas primary jadi hitam -->

        <!-- Secondary: Lilac Muda -->
        <item name="colorSecondary">@color/lilac_200</item>
        <item name="colorSecondaryVariant">@color/lilac_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & Surface -->
        <item name="android:windowBackground">@color/background_night</item>
        <item name="colorSurface">@color/surface_night</item> <!-- CardView bakal pake warna ini -->
        <item name="colorOnSurface">@color/text_primary_night</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_night</item>
    </style>

    <!-- Tema KHUSUS Dashboard/Profile (Night NoActionBar) -->
    <style name="Theme.ECGApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sage_200</item>
        <item name="colorPrimaryVariant">@color/sage_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lilac_200</item>
        <item name="colorSecondaryVariant">@color/lilac_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/background_night</item>
        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnSurface">@color/text_primary_night</item>

        <item name="android:statusBarColor">@color/background_night</item>
    </style>

    <!-- Overlay Toolbar -->
    <style name="Theme.ECGApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Overlay Popup (Menu titik tiga background gelap) -->
    <style name="Theme.ECGApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>